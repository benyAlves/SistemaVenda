<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/vendabd?zeroDateTimeBehavior=convertToNull
        </property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="bernardo.venda.pojo.ProdutoVenda"/>
        <mapping class="bernardo.venda.pojo.Cliente"/>
        <mapping class="bernardo.venda.pojo.ProdutoVendaId"/>
        <mapping class="bernardo.venda.pojo.Fornecedor"/>
        <mapping class="bernardo.venda.pojo.Endereco"/>
        <mapping class="bernardo.venda.pojo.Definicao"/>
        <mapping class="bernardo.venda.pojo.Categoria"/>
        <mapping class="bernardo.venda.pojo.Parcela"/>
        <mapping class="bernardo.venda.pojo.Transacao"/>
        <mapping class="bernardo.venda.pojo.Empresa"/>
        <mapping class="bernardo.venda.pojo.Produto"/>
        <mapping class="bernardo.venda.pojo.Caixa"/>
        <mapping class="bernardo.venda.pojo.Utilizador"/>
    </session-factory>
</hibernate-configuration>
